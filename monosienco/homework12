require "pry"
require "rest-client"
require "nokogiri"

data = RestClient.get('https://point.md/ru/').body
html = Nokogiri::HTML(data)

my_hash = {}

i=0

while i < 10 do
	p keys = html.css('figure[class = "post-list-container-item-img"] img')[i]['alt']
	p values = html.css('figure[class = "post-list-container-item-img"] img')[i]['src']

	my_hash[keys] = values
	img = RestClient.get(my_hash[keys]).body

	File.write( './' + keys.to_s  , img, mode: "wb")

	i+=1
end
